# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_guild_id_here  # Optional, for development

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=discord_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here  # Optional
REDIS_DB=0

# AI Model Configuration
# Choose your model provider: openai, anthropic, openrouter, together, self-hosted
MODEL_PROVIDER=openai

# Common model settings
MODEL_NAME=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.7

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Custom OpenAI-compatible endpoint
# OPENAI_BASE_URL=https://api.openai.com

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Optional: Custom Anthropic-compatible endpoint
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# OpenRouter Configuration (for access to various models including uncensored ones)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# Optional: Custom OpenRouter endpoint
# OPENROUTER_BASE_URL=https://openrouter.ai

# Together AI Configuration (for access to open source models)
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-2-70b-chat-hf
# Optional: Custom Together AI endpoint
# TOGETHER_BASE_URL=https://api.together.xyz

# Self-hosted Model Configuration
SELF_HOSTED_MODEL_URL=http://localhost:8000/v1/chat/completions
SELF_HOSTED_API_KEY=your_self_hosted_api_key_here  # Optional

# Voice Service Configuration
PIPECAT_SERVICE_URL=http://localhost:8001

# Logging Configuration
LOG_LEVEL=info
ENVIRONMENT=development

# Bot Behavior Configuration
BOT_PREFIX=!
AUTO_JOIN_VOICE=false
DEFAULT_LANGUAGE=en

# Service URLs (for local development)
GRIPTAPE_SERVICE_URL=http://localhost:8000

# Speech Services
DEEPGRAM_API_KEY=your_deepgram_api_key_here
ELEVENLABS_API_API_KEY=your_elevenlabs_api_key_here
WHISPER_MODEL=base

# Database Configuration
POSTGRES_URL=postgresql://postgres:password@localhost:5432/discord_bot
REDIS_URL=redis://localhost:6379

# Bot Configuration
VOICE_CHANNEL_AUTO_JOIN=true
VOICE_ACTIVITY_DETECTION=true
VOICE_INTERRUPTION_HANDLING=true

# Tool Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
WEB_SEARCH_API_KEY=your_serpapi_key_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
HEALTH_CHECK_PORT=3000

# Development
HOT_RELOAD=true
DEBUG_MODE=false

# Model Configuration
MODEL_PROVIDER=openai  # openai, anthropic, openrouter, together, self-hosted
MODEL_NAME=gpt-4  # Model name for the selected provider

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# Together AI Configuration  
TOGETHER_API_KEY=your_together_api_key
TOGETHER_MODEL=meta-llama/Llama-2-70b-chat-hf

# Self-Hosted Model Configuration
SELF_HOSTED_MODEL_URL=http://your-model-endpoint.com/v1/chat/completions
SELF_HOSTED_API_KEY=optional_api_key 